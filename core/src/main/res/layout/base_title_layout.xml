<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/base_title_top"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="4dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/base_title_logo" />


    <TextClock
        android:id="@+id/login_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:format24Hour="yyyy 年 MM 月 dd 日"
        android:textColor="#C7FAFF"
        android:textSize="10sp"
        tools:text="2018年03月05日" />

    <TextClock
        android:id="@+id/login_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/login_date"
        android:format24Hour="HH:mm EEEE"
        android:textColor="#C7FAFF"
        android:textSize="10sp"
        tools:text="10:30 星期五" />

</RelativeLayout>
